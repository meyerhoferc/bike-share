<h1>Weather Dashboard</h1>

<div class="row">
      <div class="col s12 m10">
        <div class="card">
          <div class="card-content">
            <section id="weather-dashboard">
              <!-- <h4>Analysis of Trips for Visibility</h4> -->
              <section class='maximum-visibility-data'>
                <p>Maximum Number of Trips on a Day</p>
                <% @max_visibilities.each do |visibility| %>
                <p><%= "#{visibility} "%></p>
                <% end %>
              </section>
              <section class='minimum-visibility-data'>
                <p>Minimum Number of Trips on a Day</p>
                <% @min_visibilities.each do |visibility| %>
                <p><%= "#{visibility} "%></p>
                <% end %>
              </section>
              <section class='average-visibility-data'>
                <p>Average Number of Trips on a Day</p>
                <% @ave_visibilities.each do |visibility| %>
                <p><%= "#{visibility} "%></p>
                <% end %>
              </section>
            </section>
          </div>
        </div>

        <div class='card weather'>
          <div class='card-content'>
            <section id='wind-data'>
              <!-- <h4>Analysis of Trips for Wind Speed</h4> -->
              <section class='wind-maximum-rides'>
                <p>Maximum Number of Trips on a Day</p>
                <% @max_wind_speeds.each do |speed| %>
                <p><%= "#{speed} "%></p>
                <% end %>
              </section>
              <section class='wind-minimum-rides'>
                <p>Minimum Number of Trips on a Day</p>
                <% @min_wind_speeds.each do |speed| %>
                <p><%= "#{speed} "%></p>
                <% end %>
              </section>
              <section class='wind-average-rides'>
                <p>Average Number of Trips on a Day</p>
                <% @ave_wind_speeds.each do |speed| %>
                <p><%= "#{speed} "%></p>
                <% end %>
              </section>
              <p>Day with Most Rides: </p>
              <% Condition.temp_highest_rides.each do |ride| %>
                <p><%= ride %></p>
              <% end %>
              <p>Day with Least Rides: </p>
              <% Condition.temp_lowest_rides.each do |ride| %>
                <p><%= ride %></p>
              <% end %>
              <p>Average Rides per Day: </p>
              <% Condition.temp_average_rides.each do |ride| %>
                <p><%= ride %></p>
              <% end %>
            </section>
            </section>
            <p>Day with Most Rides: </p>
            <% Condition.precipitation_highest_rides.each do |ride| %>
              <p><%= ride %></p>
            <% end %>
            <p>Day with Least Rides: </p>
            <% Condition.precipitation_lowest_rides.each do |ride| %>
              <p><%= ride %></p>
            <% end %>
            <p>Average Rides per Day: </p>
            <% Condition.precipitation_average_rides.each do |ride| %>
              <p><%= ride %></p>
            <% end %>
          </section>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
