<h1>All Stations</h1>

<% @stations.each do |station| %>
<div class="row">
      <div class="col s12 m7">
        <div class="card">
          <div class="card-image">
            <img src="station_card.jpg">
            <span class="card-title">Card Title</span>
          </div>
          <div class="card-content">
            <section>
              <h4>Station Name: <%= station.name %></h4>
              <h5>City: <%= station.city %></h5>
              <p>Total Number of Docks: <%= station.dock_count %></p>
              <p>Installation Date: <%= station.installation_date %></p>
            </section>
            <!-- <a href="/stations/<%= station.id %>/edit" id="download-button" class="btn waves-effect waves-light indigo lighten-1">Edit</a> -->
          </div>

          <div class="card-action">
            <a href="/stations/<%= station.id %>">View Station</a>
            <a href="/stations/<%= station.id %>/edit">Edit</a>
            <!-- <a href="/stations/<%= station.id %>">Delete</a> -->
          </div>

          <div class="card-action">
            <form action='/stations/<%= station.id %>' method="POST">
              <input type="hidden" name="_method" value="DELETE" />
              <input type="submit" value="Delete" />
            </form>
          </div>

        </div>
      </div>
    </div>
<% end %>
