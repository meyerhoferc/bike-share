<h1>Station Information</h1>

<section>
  <p>Station Name: <%= @station.name %></p>
  <p>City: <%= @station.city.name %></p>
  <p>Total Number of Docks: <%= @station.dock_count %></p>
  <p>Installation Date: <%= @station.installation_date %></p>
  <p>Most Frequent Destination: <%= @station.most_frequent_destination %></p>
  <p>Most Frequent Origin: <%= @station.most_frequent_origin %></p>
  <p id="rides_ending">Rides Ended at this Station: <%= @station.rides_ended %></p>
  <p id="rides_starting">Rides Started at this Station: <%= @station.rides_started %></p>
</section>

<a href="/stations/<%= @station.id %>/edit">Edit</a>
<form action='/stations/<%= @station.id %>' method="POST">
  <input type="hidden" name="_method" value="DELETE" />
  <input type="submit" value="Delete" />
</form>
